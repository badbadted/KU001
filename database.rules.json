{
  "rules": {
    "schedule": {
      ".read": true,
      ".write": "auth != null"
    },
    "locks": {
      ".read": true,
      ".write": "auth != null"
    },
    "users": {
      ".read": true,
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "presence": {
      ".read": true,
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    }
  }
}
